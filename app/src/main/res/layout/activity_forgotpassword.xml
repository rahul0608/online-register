<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahulverma.mobilebasedattendencesystem.Forgotpassword"
    android:background="@color/text_color_skyblue">

    <EditText
        android:id="@+id/editText5"
        android:layout_width="362dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Your Username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Sendpassword"
        tools:layout_editor_absoluteY="337dp"
        app:layout_constraintVertical_bias="0.531" />

    <Button
        android:id="@+id/Sendpassword"
        android:layout_width="341dp"
        android:layout_height="55dp"
        android:text="Send password"
        android:background="@color/text_color_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="82dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="252dp"
        android:layout_height="46dp"
        android:text="Forgot Password?"
        android:textColor="@color/text_color_white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="291dp"
        android:layout_height="71dp"
        android:textSize="17dp"
        android:textColor="@color/text_color_white"
        android:text="Enter your username to get the password  on your registered email address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.564"
        app:layout_constraintHorizontal_bias="0.506" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="387dp"
        android:layout_height="215dp"
        app:srcCompat="@drawable/forgetpass"
        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
